{
  "version": 2,
  "buildCommand": "next build",
  "installCommand": "apt-get update && apt-get install -y ffmpeg && npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/" }
  ],
  "ignoreCommand": null,
  "functions": {
    "src/app/api/combine-audio/route.ts": {
      "memory": 1024,
      "maxDuration": 60,
      "runtime": "nodejs18.x"
    },
    "src/app/api/*.ts": {
      "maxDuration": 10,
      "runtime": "nodejs18.x"
    },
    "src/pages/api/**/*": {
      "runtime": "nodejs18.x"
    }
  },
  "build": {
    "env": {
      "FFMPEG_PATH": "/usr/bin/ffmpeg"
    }
  }
}
